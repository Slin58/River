@model IEnumerable<River.Data.Models.Domain.University>

@{
    ViewData["Title"] = "GetUniversities";
}

<h1>GetUniversities</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="GetUniversity" asp-route-id="@item.UniversityID">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
