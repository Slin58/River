@model IEnumerable<River.Data.Models.Domain.Application>

@{
    ViewData["Title"] = "GetApplications";
}

<h1>GetApplications</h1>

<p>
    <a asp-action="AddApplication" asp-controller="Application">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model.Any())
{
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="GetApplication" asp-controller="Application" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
        
}
    </tbody>
</table>
